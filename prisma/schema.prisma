generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("NEXT_PUBLIC_POSTGRES_PRISMA_URL") // uses connection pooling
    directUrl = env("NEXT_PUBLIC_POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model user {
    id       String  @id @unique
    username String
    email    String
    password String
    amount   Int     @default(0)
    capital  Int     @default(0)
    order    order[]
}

model order {
    id        String   @id @unique
    status    String
    lastOrder DateTime
    method    String
    time      String
    userId    String
    idUser    user     @relation(fields: [userId], references: [id])
}
